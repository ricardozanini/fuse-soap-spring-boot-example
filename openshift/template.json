{
	"apiVersion": "v1",
	"kind": "Template",
	"labels": {
		"template": "temperature-conversion",
		"project": "temperature-conversion"
	},
	"metadata": {
		"annotations": {
			"description": "A simple example of how to implement a JAX-WS (Soap) CXF service with Camel and Spring Boot.",
			"author": "Ricardo Zanini <ricardozanini@gmail.com>",
			"tags": "camel, cxf, spring-boot, soap, fuse",
			"url": "https://github.com/ricardozanini/fuse-soap-spring-boot-example",
			"iconClass": "icon-java"
		},
		"name": "temperature-conversion-template"
	},
	"parameters": [
		{
			"description": "Username of the user that attempt to access the application",
			"name": "SVC_USER_NAME",
			"value": "user"
		},
		{
			"description": "Password of the user that attempt to access the application",
			"name": "SVC_PASSWORD",
			"required": true
		}
	],
	"objects": [
		{
			"apiVersion": "v1",
			"kind": "Service",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"spec": {
				"ports": [
					{
						"name": "8080-tcp",
						"port": 8080,
						"protocol": "TCP",
						"targetPort": 8080
					},
					{
						"name": "8443-tcp",
						"port": 8443,
						"protocol": "TCP",
						"targetPort": 8443
					},
					{
						"name": "8778-tcp",
						"port": 8778,
						"protocol": "TCP",
						"targetPort": 8778
					}
				],
				"selector": {
					"deploymentconfig": "temperature-conversion"
				},
				"sessionAffinity": "None",
				"type": "ClusterIP"
			},
			"status": {
				"loadBalancer": {
					
				}
			}
		},
		{
			"apiVersion": "v1",
			"kind": "ConfigMap",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"data": {
				"application.properties": ""
			}
		},
		{
			"apiVersion": "v1",
			"kind": "Secret",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion-credentials",
				"annotations": {
					"template.openshift.io/base64-expose-password": "{.data['security\\.user\\.password']}"
				}
			},
			"type": "Opaque",
			"stringData": {
				"security.user.name": "${SVC_USER_NAME}",
				"security.user.password": "${SVC_PASSWORD}"
			}
		},
		{
			"apiVersion": "apps.openshift.io/v1",
			"kind": "DeploymentConfig",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"spec": {
				"replicas": 1,
				"selector": {
					"deploymentconfig": "temperature-conversion"
				},
				"strategy": {
					"activeDeadlineSeconds": 21600,
					"resources": {
						
					},
					"rollingParams": {
						"intervalSeconds": 1,
						"maxSurge": "25%",
						"maxUnavailable": "25%",
						"timeoutSeconds": 600,
						"updatePeriodSeconds": 1
					},
					"type": "Rolling"
				},
				"template": {
					"metadata": {
						"labels": {
							"app": "temperature-conversion",
							"deploymentconfig": "temperature-conversion"
						}
					},
					"spec": {
						"containers": [
							{
								"image": "temperature-conversion",
								"imagePullPolicy": "Always",
								"livenessProbe": {
									"failureThreshold": 3,
									"httpGet": {
										"path": "/health",
										"port": 8081,
										"scheme": "HTTP"
									},
									"initialDelaySeconds": 120,
									"periodSeconds": 10,
									"successThreshold": 1,
									"timeoutSeconds": 2
								},
								"name": "temperature-conversion",
								"ports": [
									{
										"containerPort": 8080,
										"protocol": "TCP"
									},
									{
										"containerPort": 8443,
										"protocol": "TCP"
									},
									{
										"name": "jolokia",
										"containerPort": 8778,
										"protocol": "TCP"
									}
								],
								"readinessProbe": {
									"failureThreshold": 3,
									"httpGet": {
										"path": "/health",
										"port": 8081,
										"scheme": "HTTP"
									},
									"initialDelaySeconds": 120,
									"periodSeconds": 10,
									"successThreshold": 1,
									"timeoutSeconds": 2
								},
								"resources": {
									"limits": {
										"cpu": "500m",
										"memory": "128Mi"
									},
									"requests": {
										"cpu": "200m",
										"memory": "64Mi"
									}
								},
								"terminationMessagePath": "/dev/termination-log",
								"terminationMessagePolicy": "File",
								"volumeMounts": [
									{
										"mountPath": "/etc/secrets/credentials",
										"name": "volume-credentials",
										"readOnly": true
									}
								]
							}
						],
						"dnsPolicy": "ClusterFirst",
						"restartPolicy": "Always",
						"schedulerName": "default-scheduler",
						"securityContext": {
							
						},
						"terminationGracePeriodSeconds": 30,
						"volumes": [
							{
								"name": "volume-credentials",
								"secret": {
									"defaultMode": 420,
									"secretName": "temperature-conversion-credentials"
								}
							}
						]
					}
				},
				"triggers": [
					{
						"imageChangeParams": {
							"automatic": true,
							"containerNames": [
								"temperature-conversion"
							],
							"from": {
								"kind": "ImageStreamTag",
								"name": "temperature-conversion:latest"
							}
						},
						"type": "ImageChange"
					},
					{
						"type": "ConfigChange"
					}
				]
			}
		},
		{
			"apiVersion": "build.openshift.io/v1",
			"kind": "BuildConfig",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"spec": {
				"nodeSelector": null,
				"output": {
					"to": {
						"kind": "ImageStreamTag",
						"name": "temperature-conversion:latest"
					}
				},
				"postCommit": {
					
				},
				"resources": {
					
				},
				"runPolicy": "Serial",
				"source": {
					"git": {
						"ref": "master",
						"uri": "https://github.com/ricardozanini/fuse-soap-spring-boot-example.git"
					},
					"type": "Git"
				},
				"strategy": {
					"sourceStrategy": {
						"from": {
							"kind": "ImageStreamTag",
							"name": "redhat-openjdk18-openshift:1.3",
							"namespace": "openshift"
						}
					},
					"type": "Source"
				},
				"triggers": [
					{
						"imageChange": {
							
						},
						"type": "ImageChange"
					},
					{
						"type": "ConfigChange"
					}
				]
			}
		},
		{
			"apiVersion": "image.openshift.io/v1",
			"kind": "ImageStream",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"spec": {
				"lookupPolicy": {
					"local": false
				}
			}
		},
		{
			"apiVersion": "route.openshift.io/v1",
			"kind": "Route",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"spec": {
				"port": {
					"targetPort": "8080-tcp"
				},
				"tls": {
					"termination": "edge"
				},
				"to": {
					"kind": "Service",
					"name": "temperature-conversion",
					"weight": 100
				},
				"wildcardPolicy": "None"
			}
		},
		{
			"apiVersion": "v1",
			"kind": "ServiceAccount",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "sa-temperature-conversion"
			}
		},
		{
			"apiVersion": "authorization.openshift.io/v1",
			"kind": "RoleBinding",
			"metadata": {
				"labels": {
					"app": "temperature-conversion"
				},
				"name": "temperature-conversion"
			},
			"roleRef": {
				"name": "view"
			},
			"subjects": [
				{
					"kind": "ServiceAccount",
					"name": "sa-temperature-conversion"
				}
			]
		}
	]
}
 