{
    "apiVersion": "v1",
    "kind": "Template",
    "labels" : {
        "template" : "temperature-conversion",
        "project" : "temperature-conversion"
    },
    "metadata" : {
        "annotations" : {
            "description" : "A simple example of how to implement a JAX-WS (Soap) CXF service with Camel and Spring Boot.",
            "author": "Ricardo Zanini <ricardozanini@gmail.com>",
            "tags": "camel, cxf, spring-boot, soap, fuse",
            "url" : "https://github.com/ricardozanini/fuse-soap-spring-boot-example",
            "iconClass" : "icon-java"
        },
        "name" : "temperature-conversion-template"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "app": "temperature-conversion"
                },
                "name": "temperature-conversion"
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "port": 8080,
                        "protocol": "TCP",
                        "targetPort": 8080
                    },
                    {
                        "name": "8443-tcp",
                        "port": 8443,
                        "protocol": "TCP",
                        "targetPort": 8443
                    },
                    {
                        "name": "8778-tcp",
                        "port": 8778,
                        "protocol": "TCP",
                        "targetPort": 8778
                    }
                ],
                "selector": {
                    "deploymentconfig": "temperature-conversion"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "apiVersion": "apps.openshift.io/v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "labels": {
                    "app": "temperature-conversion"
                },
                "name": "temperature-conversion"
            },
            "spec": {
                "selector": {
                    "deploymentconfig": "temperature-conversion"
                },
                "strategy": {
                    "activeDeadlineSeconds": 21600,
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "maxSurge": "25%",
                        "maxUnavailable": "25%",
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "temperature-conversion",
                            "deploymentconfig": "temperature-conversion"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "temperature-conversion",
                                "imagePullPolicy": "Always",
                                "livenessProbe": {
                                    "failureThreshold": 3,
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8081,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 120,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "timeoutSeconds": 2
                                },
                                "name": "temperature-conversion",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8778,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "failureThreshold": 3,
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8081,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 60,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "timeoutSeconds": 2
                                },
                                "resources": {
                                    "limits": {
                                        "cpu": "500m",
                                        "memory": "128Mi"
                                    },
                                    "requests": {
                                        "cpu": "200m",
                                        "memory": "64Mi"
                                    }
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File"
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "schedulerName": "default-scheduler",
                        "securityContext": {},
                        "terminationGracePeriodSeconds": 30
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "temperature-conversion"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "temperature-conversion:latest"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "build.openshift.io/v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "app": "temperature-conversion"
                },
                "name": "temperature-conversion"                
            },
            "spec": {
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "temperature-conversion:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "git": {
                        "ref": "master",
                        "uri": "https://github.com/ricardozanini/fuse-soap-spring-boot-example.git"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "redhat-openjdk18-openshift:1.3",
                            "namespace": "openshift"
                        }
                    },
                    "type": "Source"
                },
                "triggers": [
                    {
                        "imageChange": {
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "image.openshift.io/v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "app": "temperature-conversion"
                },
                "name": "temperature-conversion"
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "apiVersion": "route.openshift.io/v1",
            "kind": "Route",
            "metadata": {
                "labels": {
                    "app": "temperature-conversion"
                },
                "name": "temperature-conversion"
            },
            "spec": {
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                },
                "to": {
                    "kind": "Service",
                    "name": "temperature-conversion",
                    "weight": 100
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
